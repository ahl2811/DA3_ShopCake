<UserControl x:Class="DA3_ShopCake.Screens.CakeDetailScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DA3_ShopCake.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock FontSize="30" Foreground="Orange" Margin="200" Text="Detail Screen"/>
        <Button x:Name="exitDetailButton" Width="50" Height="30" Content="Close" Click="exitDetailButton_Click"/>
        <Button x:Name="updateDetailButton" Width="80" Height="40" Content="Update" Click="updateDetailButton_Click" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
